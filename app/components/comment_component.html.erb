<div class="w-full hover:bg-slate-200"  id="comment_<%= @comment.id %>">
  <div class="p-4 flex flex-col justify-between leading-normal mx-auto">
    <%# 作成者 %>
    <div class="flex items-center">
      <div class="text-sm flex gap-x-3">
        <%# image %>
        <%= image_tag "ayatsuji2.jpg", class: "w-10 h-10 rounded-full"%>
        <p class="text-gray-900 leading-none  mt-4"><%= link_to User.find(@comment.user_id).name, User.find(@comment.user_id), class: "hover:underline" %></p>
        <p class="text-gray-600  mt-3"><%= time_ago_in_words(@comment.created_at) %></p>
      </div>
    </div>
    <%# comment %>
    <div class="mb-8">
      <div class="text-gray-900 font-bold text-xl mb-2"><%= @comment.content %></div>
    </div>
  </div>
</div>
