<% provide(:title, @title) %>
<div class="mx-auto w-2/4">
  <div class="border-r border-b border-l border-gray-400">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/follow_stats' %>
    </section>
  </div>
  <div class="col-md-8">
    <div><%= @title %></div>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
          <div>
            <%= link_to user.name, user %>
          </div>
        <% end %>
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>
