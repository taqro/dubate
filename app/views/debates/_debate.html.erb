<div class="max-w-xl w-full "  id="debate_<%= debate.id %>">
  <div class="border-r border-b border-l border-gray-400  bg-white rounded-b  p-4 flex flex-col justify-between leading-normal mx-auto">
    <%# 作成者 %>
    <div class="flex items-center">
      <div class="text-sm">
        <p class="text-gray-900 leading-none"><%= User.find(debate.created_user_id).name%></p>
        <p class="text-gray-600"><%= time_ago_in_words(debate.created_at) %></p>
      </div>
    </div>
    <%# 参加者 %>
    <% if !(debate.joined_user_id.nil?) %>
    <div class="flex items-center">
      <div class="text-sm">
        <p class="text-gray-900 leading-none"><%= User.find(debate.joined_user_id).name %></p>
        <p class="text-gray-600"><%= time_ago_in_words(debate.started_at) %></p>
      </div>
    </div>
    <% end %>
    <%# 議論のステータス %>
    <div class="flex items-center">
      <div class="text-sm">
        <%= debate.status %>
      </div>
    </div>
    <%# 議題 %>
    <div class="mb-8">
      <div class="text-gray-900 font-bold text-xl mb-2"><%= link_to debate.agenda, debate %></div>
    </div>
    <%# いいね %>
    <div>
      <% if current_user.liked?(debate) %>
        <td>
          <%= button_to 'いいねを取り消す', debate_likes_path(debate)       , method: :delete, remote: true %>
        </td>
      <% else %>
        <td>
          <%= button_to 'いいね', debate_likes_path(debate),        remote: true %>
        </td>
      <% end%>
      <td>
        <%= debate.liked_users.count %>
      </td>
      <td>
        <%= button_to '削除', debate_path(debate), method: :delete %>
      </td>
    </div>
  </div>
</div>
