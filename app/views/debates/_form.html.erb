<div class="mx-auto w-2/4">
  <%= form_with model: debate, local: true do |f| %>
    <div class="mb-6">
      <label for="agenda" class="block mb-2 text-base font-medium text-gray-900 dark:text-gray-300">議題</label>
    </div>
    <div class="mb-6">
      <%= f.text_area :agenda, class: 'form-control', id: 'debate_agenda', rows: 4, class: "block p-2.5 w-9/12 text-sm text-gray-900  bg-gray-50 rounded-lg border border-black focus:ring-black focus:border-black", placeholder: "議題を入力してください" %>
    </div>
    <div class="mb-6">
      <button type="submit" class="text-white bg-black focus:ring-4 focus:outline-none focus:ring-blue-300font-medium rounded-lg text-sm  px-5 py-2.5 text-cente">議論を作成する</button>
    </div>
  <% end%>
</div>
