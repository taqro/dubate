<div class="max-w-xl w-full "  id="conversation_<%= comment.id %>">
  <div class="border-r border-b border-l border-gray-400  bg-white rounded-b  p-4 flex flex-col justify-between leading-normal mx-auto">
    <%# 作成者 %>
    <div class="flex items-center">
      <div class="text-sm">
        <p class="text-gray-900 leading-none"><%= User.find(comment.user_id).name%></p>
        <p class="text-gray-600"><%= time_ago_in_words(comment.created_at) %></p>
      </div>
    </div>
    <%# conversation %>
    <div class="mb-8">
      <div class="text-gray-900 font-bold text-xl mb-2"><%= comment.content %></div>
    </div>
  </div>
</div>

